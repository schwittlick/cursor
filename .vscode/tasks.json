{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "cargo",
            "subcommand": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/cursor-rust"
            },
            "command": "cargo test --no-run",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}